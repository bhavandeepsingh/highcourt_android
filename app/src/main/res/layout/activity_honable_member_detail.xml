<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_white"
    android:orientation="vertical"
    tools:context="com.high.court.activities.ExicutiveMemberDetail">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/colorPrimary" />


    <de.hdodenhof.circleimageview.CircleImageView
        startToolbarPosition="2dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-65dp"
        android:src="@drawable/profilepic"
        app:finalHeight="@dimen/image_final_width"
        app:layout_behavior="com.high.court.activities.AvatarImageBehavior"
        app:startToolbarPosition="2dp"
        app:startXPosition="2dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/clr_white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="landline"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPrimary" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="0172-245789"
                                android:textAllCaps="true"
                                android:textColor="@color/clr_textcolor_dark" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ext. No"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPrimary" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="534"
                                android:textAllCaps="true"
                                android:textColor="@color/clr_textcolor_dark" />


                        </LinearLayout>


                    </LinearLayout>


                    <View
                        style="@style/stl_devider"
                        android:layout_marginTop="@dimen/padding" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Address"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Sec17, Chd"
                        android:textAllCaps="true"
                        android:textColor="@color/clr_textcolor_dark" />

                    <View
                        style="@style/stl_devider"
                        android:layout_marginTop="@dimen/padding" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="D.O.B"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="1-1-1970"
                        android:textAllCaps="true"
                        android:textColor="@color/clr_textcolor_dark" />

                    <View
                        style="@style/stl_devider"
                        android:layout_marginTop="@dimen/padding" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Date of Appointment as Judge"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="2651417"
                        android:textAllCaps="true"
                        android:textColor="@color/clr_textcolor_dark" />

                    <View
                        style="@style/stl_devider"
                        android:layout_marginTop="@dimen/padding" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Date of Retirement as Judge"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="94177-59300"
                        android:textAllCaps="true"
                        android:textColor="@color/clr_textcolor_dark" />

                    <View
                        style="@style/stl_devider"
                        android:layout_marginTop="@dimen/padding" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_marginTop="@dimen/padding"
                    android:paddingBottom="@dimen/padding"
                    android:text="Born on 4th May 1956. Completed school education in 1972 from Rishi Valley School. Graduated from St. Xavier's College, Bombay. Completed his LL.B. from Hinduja Law College, Bombay. Enrolled as an Advocate on the rolls of Bar Council of Maharashtra and Goa on 17th October, 1980. Practiced on both Original and Appellate Sides in the Bombay High Court in Civil, Constitutional, Company and Arbitration matters. Also appeared in the Supreme Court, various High Courts, Tribunals, District Courts etc. Sworn in as Additional Judge of the Bombay High Court on 22nd January, 2001. He was appointed as a permanent Judge on January 21, 2003. Assumed charge as the Acting Chief Justice of Punjab &amp; Haryana High Court on 15.12.2014 (A.N.) on transfer from Bombay High Court. Took oath as Chief Justice of Punjab and Haryana High Court on 06th August, 2016."
                    android:textAllCaps="true"
                    android:textColor="@color/clr_textcolor_dark" />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>
