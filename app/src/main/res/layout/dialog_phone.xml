<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/clr_white"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/phonelayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"
                android:adjustViewBounds="true"
                android:src="@drawable/call_icon" />

            <TextView
                android:id="@+id/ponenumber_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 98140-12345"
                android:layout_marginRight="16dp"
                android:textColor="@color/clr_textcolor_dark"
                android:textSize="15sp"
                android:textStyle="normal" />

            <Button
                android:layout_width="57dp"
                android:text="CALL"
                android:padding="6dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="10sp"
                android:background="@drawable/border_callbutton"
                android:layout_gravity="center_vertical"
                android:textColor="@color/clr_white"
                android:layout_height="25dp" />


        </LinearLayout>

        <View style="@style/stl_devider"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:id="@+id/phonelayer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"
                android:adjustViewBounds="true"
                android:src="@drawable/call_icon" />

            <TextView
                android:id="@+id/ponenumber_val2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 98140-12345"
                android:textColor="@color/clr_textcolor_dark"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="57dp"
                android:text="CALL"
                android:padding="6dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="10sp"
                android:background="@drawable/border_callbutton"
                android:layout_gravity="center_vertical"
                android:textColor="@color/clr_white"
                android:layout_height="25dp" />

        </LinearLayout>
        <View style="@style/stl_devider"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>
        <LinearLayout
            android:id="@+id/phonelayer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"
                android:adjustViewBounds="true"
                android:src="@drawable/call_icon" />

            <TextView
                android:id="@+id/ponenumber_val3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 98140-12345"
                android:textColor="@color/clr_textcolor_dark"
                android:textSize="15sp"
                android:layout_marginRight="16dp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="57dp"
                android:text="CALL"
                android:padding="6dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="10sp"
                android:background="@drawable/border_callbutton"
                android:layout_gravity="center_vertical"
                android:textColor="@color/clr_white"
                android:layout_height="25dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>